datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ==== MODELOS PARA AUTH (NextAuth / Auth.js) ====

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?

  // Campo para credenciales (email + contraseña)
  password      String?   // hash bcrypt

  accounts Account[]
  sessions Session[]

  // Campos extra ZORU
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaciones con órdenes y raffles
  orders        Order[]
  raffleEntries RaffleEntry[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ==== MODELOS ZORU (PRODUCTOS / ÓRDENES / RAFFLE) ====

model Product {
  id          String    @id @default(cuid())
  title       String
  slug        String    @unique
  description String?
  price       Int       // centavos (S/ 189.00 => 18900)
  image       String
  stock       Int       @default(0)
  category    String
  colors      String[]  @db.Text
  sizes       String[]  @db.Text
  sku         String    @unique
  featured    Boolean   @default(false)
  releaseDate DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orderItems    OrderItem[]
  raffleEntries RaffleEntry[]
}

model Order {
  id        String   @id @default(cuid())
  userId    String
  total     Int      // centavos
  status    String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User        @relation(fields: [userId], references: [id])
  items OrderItem[]
}

model OrderItem {
  id        String @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  unitPrice Int    // centavos

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])
}

model RaffleEntry {
  id        String   @id @default(cuid())
  userId    String
  productId String
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}
